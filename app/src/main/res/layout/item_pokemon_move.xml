                app:layout_constraintTop_toTopOf="@+id/textViewPokemonMoveLearnMethod" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPokemonMoveLevel"
                style="@style/TextViewSmall"
