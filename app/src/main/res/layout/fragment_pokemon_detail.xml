<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.kronos.pokedex.ui.pokemon.detail.PokemonDetailViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pokemon.detail.PokemonDetailFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_10">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".02" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".98" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPokemonDetailBaseDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintStart_toStartOf="@+id/guideline1"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineBase1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineBase35"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".35" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineBase9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".95" />

                        <ImageView
                            android:id="@+id/imageViewPokemon"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_margin="@dimen/margin_5"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineBase35"
                            app:layout_constraintStart_toStartOf="@+id/guidelineBase1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonPokedexEntry"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:text="@{`#`+ viewModel.pokemonInfo.id}"
                            app:layout_constraintBottom_toTopOf="@+id/textViewPokemonName"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineBase9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineBase35" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonName"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.pokemonInfo.name.toUpperCase()}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/layoutTypes"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineBase9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineBase35" />

                        <include
                            android:id="@+id/layoutTypes"
                            layout="@layout/layout_types"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginEnd="@dimen/margin_8"
                            app:layout_constraintBottom_toTopOf="@+id/textViewPokemonType"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineBase9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineBase35"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonType"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:pokemon_type="@{viewModel.pokemonInfo.specie}"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginEnd="@dimen/margin_8"
                            app:layout_constraintBottom_toBottomOf="@+id/imageViewPokemon"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineBase9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineBase35" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonDescription"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_8"
                            android:text="@{viewModel.pokemonDescription.replaceAll(`\n`,` `)}"
                            android:textStyle="bold"
                            android:maxLines="15"
                            android:singleLine="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineBase9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineBase1"
                            app:layout_constraintTop_toBottomOf="@+id/imageViewPokemon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPokemonBasicInfoTypes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintStart_toStartOf="@+id/guideline1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPokemonDetailBaseDetail">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineInfo1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineInfo45"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".45" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineInfo9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".95" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonBasicInfoHeader"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:text="INFO"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonBaseExpLabel"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="Base Exp."
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonBasicInfoHeader" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonBaseExp"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(viewModel.pokemonInfo.baseExperience)}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonBaseExpLabel"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonBaseExpLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonHeightLabel"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Height:"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonBaseExpLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonHeight"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(viewModel.pokemonInfo.height)}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonHeightLabel"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonHeightLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonWeightLabel"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Weight:"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonHeightLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonWeight"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(viewModel.pokemonInfo.weight)}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonWeightLabel"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonWeightLabel" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonHappinessLabel"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Base Happiness:"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonWeightLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonHappiness"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(viewModel.pokemonInfo.specie.baseHappiness)}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonHappinessLabel"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonHappinessLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonGrowthRateLabel"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Growth Rate:"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonHappinessLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonGrowthRate"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:handle_pokemon_growth_rate="@{viewModel.pokemonInfo.specie.growthRate.name}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonGrowthRateLabel"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonGrowthRateLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonHabitatLabel"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:text="Habitat:"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonGrowthRateLabel" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonHabitat"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:handle_pokemon_habitat="@{viewModel.pokemonInfo.specie.habitat.name}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonHabitatLabel"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineInfo9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineInfo45"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonHabitatLabel" />



                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPokemonAbilities"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintStart_toStartOf="@+id/guideline1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPokemonBasicInfoTypes">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineAbility2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineAbility1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".01" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineAbility9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".99" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineAbility8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".8" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonAbilityHeader"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:text="ABILITIES"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineAbility8"
                            app:layout_constraintStart_toStartOf="@+id/guidelineAbility2"
                            app:layout_constraintTop_toTopOf="parent" />


                        <include
                            android:id="@+id/layoutAbilities"
                            layout="@layout/layout_abilities"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineAbility9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineAbility1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonAbilityHeader"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPokemonStats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintStart_toStartOf="@+id/guideline1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPokemonAbilities">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStats1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".01" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStats2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStats8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".8" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStats6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".6" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStats9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".99" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonStatsHeader"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:text="STATS"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@+id/guidelineStats2"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineStats8"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPokemonStats"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_3"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineStats9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineStats1"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonStatsHeader"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_pokemon_stat" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewStatsTotal"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginBottom="10dp"
                            android:text="@{`Total: ` + viewModel.statsTotal}"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineStats9"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/guidelineStats6"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerViewPokemonStats" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPokemonMoves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintStart_toStartOf="@+id/guideline1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPokemonStats">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineMove2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineMove8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".7" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineMove9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".99" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonMoveHeader"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:text="MOVES"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineMove8"
                            app:layout_constraintStart_toStartOf="@+id/guidelineMove2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonMoveLink"
                            style="@style/TextViewSmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:text="Show Moves"
                            android:textColor="@color/link"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/textViewPokemonMoveHeader"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineMove9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineMove8"
                            app:layout_constraintTop_toTopOf="@+id/textViewPokemonMoveHeader" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPokemonSprite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintStart_toStartOf="@+id/guideline1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPokemonMoves">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineSprite2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineSprite8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".7" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineSprite9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".99" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewPokemonSpriteHeader"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_10"
                            android:text="SPRITES"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineSprite8"
                            app:layout_constraintStart_toStartOf="@+id/guidelineSprite2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewPokemonSprites"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guidelineSprite9"
                            app:layout_constraintStart_toStartOf="@+id/guidelineSprite2"
                            app:layout_constraintTop_toBottomOf="@+id/textViewPokemonSpriteHeader"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_pokemon_sprite" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

</layout>